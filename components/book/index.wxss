.book {
    display: inline-block;
    width: 33.3%;
    margin-bottom: 15rpx;
}

.book-info{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20rpx;
    width: 100%;
    height: 290rpx;
    position: relative;
}

.book-cover {
    width: 80%;
    height: 90%;
}

.book-title {
    color: #aaa;
    font-size: 26rpx;
}

.remove-icon {
    position: absolute;
    right: 5rpx;
    top: -20rpx;
}
